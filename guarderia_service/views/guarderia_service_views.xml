<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- Vista de Formulario -->
        <record id="view_guarderia_service_form" model="ir.ui.view">
            <field name="name">guarderia.service.form</field>
            <field name="model">guarderia.service</field>
            <field name="arch" type="xml">
                <form string="Servicio de Guarderia">
                    <sheet>
                        <group>
                            <group string="Informacion del Monitor">
                                <!-- Campos heredados de hr.employee -->
                                <field name="name" string="Nombre del Monitor" required="1" placeholder="Nombre completo del monitor"/>
                                <field name="work_email"/>
                                <field name="work_phone"/>
                                <field name="department_id"/>
                                <field name="job_id"/>
                            </group>
                            <group string="Horario del Servicio">
                                <!-- Campos heredados de calendar.event -->
                                <field name="start" string="Hora de Inicio" required="1"/>
                                <field name="stop" string="Hora de Fin" required="1"/>
                                <field name="duration" string="Duracion (horas)"/>
                                <field name="location" string="Ubicacion"/>
                            </group>
                        </group>
                        <group>
                            <group string="Informacion del Servicio">
                                <!-- Campos personalizados -->
                                <field name="age_range"/>
                                <field name="description" placeholder="Descripcion detallada del servicio..."/>
                            </group>
                        </group>
                        <notebook>
                            <page string="Participantes">
                                <!-- Campo heredado de calendar.event -->
                                <field name="partner_ids" widget="many2many_tags">
                                    <list>
                                        <field name="name"/>
                                        <field name="email"/>
                                        <field name="phone"/>
                                    </list>
                                </field>
                            </page>
                            <page string="Informacion Adicional del Monitor">
                                <group>
                                    <field name="mobile_phone"/>
                                    <field name="work_location_id"/>
                                    <field name="company_id"/>
                                </group>
                            </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>

        <!-- Vista de Lista -->
        <record id="view_guarderia_service_tree" model="ir.ui.view">
            <field name="name">guarderia.service.tree</field>
            <field name="model">guarderia.service</field>
            <field name="arch" type="xml">
                <list string="Servicios de Guarderia">
                    <field name="name" string="Monitor"/>
                    <field name="age_range"/>
                    <field name="start" string="Inicio"/>
                    <field name="stop" string="Fin"/>
                    <field name="location"/>
                    <field name="department_id"/>
                </list>
            </field>
        </record>

        <!-- Vista de Busqueda -->
        <record id="view_guarderia_service_search" model="ir.ui.view">
            <field name="name">guarderia.service.search</field>
            <field name="model">guarderia.service</field>
            <field name="arch" type="xml">
                <search string="Buscar Servicios de Guarderia">
                    <field name="name" string="Monitor"/>
                    <field name="age_range"/>
                    <field name="location"/>
                    <field name="department_id"/>
                    <filter string="0-2 anos" name="age_0_2" domain="[('age_range', '=', '0-2')]"/>
                    <filter string="3-5 anos" name="age_3_5" domain="[('age_range', '=', '3-5')]"/>
                    <filter string="6-8 anos" name="age_6_8" domain="[('age_range', '=', '6-8')]"/>
                    <filter string="9-11 anos" name="age_9_11" domain="[('age_range', '=', '9-11')]"/>
                    <separator/>
                    <filter string="Hoy" name="today" domain="[('start', '&gt;=', context_today().strftime('%Y-%m-%d 00:00:00')), ('start', '&lt;=', context_today().strftime('%Y-%m-%d 23:59:59'))]"/>
                    <group expand="0" string="Agrupar por">
                        <filter string="Rango de Edad" name="group_age_range" context="{'group_by': 'age_range'}"/>
                        <filter string="Departamento" name="group_department" context="{'group_by': 'department_id'}"/>
                        <filter string="Ubicacion" name="group_location" context="{'group_by': 'location'}"/>
                    </group>
                </search>
            </field>
        </record>

        <!-- Accion de Ventana -->
        <record id="action_guarderia_service" model="ir.actions.act_window">
            <field name="name">Servicios de Guarderia</field>
            <field name="res_model">guarderia.service</field>
            <field name="view_mode">list,form</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    Crear un nuevo servicio de guarderia
                </p>
                <p>
                    Los servicios de guarderia combinan informacion del monitor (empleado)
                    y del horario (evento de calendario).
                </p>
            </field>
        </record>

        <!-- Menu Principal -->
        <menuitem id="menu_guarderia_root"
                  name="Guarderia"
                  groups="guarderia_service.group_guarderia_user"
                  sequence="60"/>

        <!-- Submenu -->
        <menuitem id="menu_guarderia_services"
                  name="Servicios de Guarderia"
                  parent="menu_guarderia_root"
                  action="action_guarderia_service"
                  groups="guarderia_service.group_guarderia_user"
                  sequence="10"/>
    </data>
</odoo>
