<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- Categoria de seguridad -->
        <record id="module_category_guarderia" model="ir.module.category">
            <field name="name">Guarderia</field>
            <field name="description">Gestion de servicios de guarderia</field>
            <field name="sequence">10</field>
        </record>

        <!-- Grupo: Usuario de Guarderia -->
        <record id="group_guarderia_user" model="res.groups">
            <field name="name">Usuario de Guarderia</field>
            <field name="category_id" ref="module_category_guarderia"/>
            <field name="implied_ids" eval="[(4, ref('base.group_user'))]"/>
            <field name="comment">Acceso basico para usuarios del servicio de guarderia</field>
        </record>

        <!-- Grupo: Administrador de Guarderia -->
        <record id="group_guarderia_manager" model="res.groups">
            <field name="name">Administrador de Guarderia</field>
            <field name="category_id" ref="module_category_guarderia"/>
            <field name="implied_ids" eval="[(4, ref('group_guarderia_user'))]"/>
            <field name="comment">Acceso completo para administradores del servicio de guarderia</field>
        </record>
    </data>
</odoo>
